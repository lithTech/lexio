        android:title="@string/pref_word_progress_factor"
        android:defaultValue="@integer/pref_word_progress_factor"
        android:summary="@string/pref_word_progress_factor_summary"
        android:numeric="integer">
    </EditTextPreference>

</PreferenceScreen>
